<% if @product.errors.any? %>
    <h2> The following errors prevented the product from being saved </h2>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg%></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @product, local: true) do |f|%>
    <p>
        <%= f.label :title%>
        <br/>
        <%= f.text_field :title%>
    </p>
    <p>
        <%= f.label :description%>
        <br/>
        <%= f.text_area :description%>
    </p>
    <p>
        <%= f.label :quantity%>
        <br/>
        <%= f.text_field :quantity %>
    </p>
    <p>
        <%= f.label 'weight (lbs)'%>
        <br/>
        <%= f.text_field :weight%>
    </p>
    <p>
        <%= f.label :city%>
        <br/>
        <%= f.select :city, ['Montreal', 'Hamilton', 'Ottawa', 'Toronto', 'Vancouver']%>
    </p>
    <p>
        <%= f.submit%>
    </p>
<% end %>