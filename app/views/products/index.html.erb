<h1>List of Products</h1>
<table>
 <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
 </thead>
 <tbody>
    <% @products.each do |product|%>
        <tr>
            <td><%= product.title%></td>
            <td><%= product.description%></td>
            <td>
                <%= button_to 'Show', product_path(product), method: :get %>
                <%= button_to 'Edit', edit_product_path(product), method: :get %>
                <%= button_to 'Delete', product_path(product), method: :delete %>
            </td>
        </tr>
    <% end %>
 </tbody>
</table>
 <%= button_to 'Create New Product', new_product_path, method: :get %>