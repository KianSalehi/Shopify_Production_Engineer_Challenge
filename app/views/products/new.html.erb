<h1>Add a Product</h1>

<% if @product.errors.any? %>
    <h2> The following errors prevented the product from being saved </h2>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg%></li>
        <% end %>
    </ul>
<% end %>

<%= form_with scope: :product, url: products_path, local: true do |f|%>
    <p>
        <%= f.label :title%>
        <br/>
        <%= f.text_field :title%>
    </p>
    <p>
        <%= f.label :description%>
        <br/>
        <%= f.text_area :description%>
    </p>
    <p>
        <%= f.label :quantity%>
        <br/>
        <%= f.select :quantity,(0..100) %>
    </p>
    <p>
        <%= f.label :weight%>
        <br/>
        <%= f.text_field :weight%>
    </p>
    <p>
        <%= f.label :city%>
        <br/>
        <%= f.text_field :city%>
    </p>
    <p>
        <%= f.submit%>
    </p>
<% end %>